{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Menu' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'menu_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
        {{ table.tbl_tr('Padre',menu.parent) }}
        {{ table.tbl_tr('Nombre',menu.name) }}
        {{ table.tbl_tr('Ruta',menu.route) }}
        {{ table.tbl_tr('Icono',menu.icon) }}
        {{ table.tbl_tr('Orden',menu.ranking) }}
        {% include 'crud/_show_info.html.twig' with {'entity': menu} %}
    {{ table.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'menu','entity': menu} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'menu','entity': menu} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'menu','entity': menu} %}
{% endblock %}