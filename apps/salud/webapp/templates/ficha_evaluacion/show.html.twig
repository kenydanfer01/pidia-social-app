{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}
{% import 'theme/cardshow.html.twig' as cardshow %}
{% import 'theme/action.html.twig' as action %}

{% set _title = 'Ficha Evaluación' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'ficha_evaluacion_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    <div class="container px-0">
        <div>
            <h1>FICHA DE EVALUACIÓN DE ENFERMERÍA</h1>
            <h3>Fecha de Atención: 00-00-0000</h3>
        </div>
        {{ cardshow.card_start('Datos del Paciente: ') }}
        {{ cardshow.row('Nombres y apellidos', ficha_evaluacion.paciente, 8) }}
        {{ cardshow.row('DNI', paciente.dni, 4) }}
        {{ cardshow.row('Fecha de Nacimiento', paciente.fechaNacimiento | date('d-m-Y'), 8) }}
        {{ cardshow.row('Edad', edad~" años", 4) }}
        {{ cardshow.row('Dirección', paciente.direccion, 8) }}
        {{ cardshow.row('Teléfono', paciente.telefono, 4) }}
        {{ cardshow.row('Sexo', paciente.sexo, 8) }}
        {{ cardshow.row('Estado Civil', paciente.estadoCivil, 4) }}
        {{ cardshow.card_end() }}
        <div>
            <h2>Valoración</h2>
        </div>
        {{ cardshow.card_start('1. Examen Físico: ') }}
        {{ cardshow.row('PA', examenFisico.presionArterial, 2) }}
        {{ cardshow.row('FC', examenFisico.frecuenciaCardiaca, 2) }}
        {{ cardshow.row('T°', examenFisico.temperatura, 2) }}
        {{ cardshow.row('FR', examenFisico.frecuenciaRespiratoria, 2) }}
        {{ cardshow.row('Peso', examenFisico.peso, 2) }}
        {{ cardshow.row('Talla', examenFisico.talla, 2) }}
        {{ cardshow.row('IMC', examenFisico.imc, 2) }}
        <div class=" px-3">
            <p>
                <strong>OBSERVACIONES:</strong>
                {{ examenFisico.observaciones }}
            </p>
            <hr><br>
            <hr><br>
        </div>
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('2. Evaluación Clínica de febriles y resfriado común (COVID-19): ') }}
        {{ cardshow.row('Otros', evaluacionClinica.otros, 6) }}
        {{ cardshow.row('Temperatura Máxima', evaluacionClinica.temperaturaMaxima, 6) }}
        {{ cardshow.row('Fiebre', evaluacionClinica.hasFiebre, 3) }}
        {{ cardshow.row('Tos', evaluacionClinica.hasTos, 3) }}
        {{ cardshow.row('Dolor de Garganta', evaluacionClinica.hasDolorGarganta, 3) }}
        {{ cardshow.row('Rinorrea', evaluacionClinica.hasRinorrea, 3) }}
        {{ cardshow.row('Expectoración', evaluacionClinica.hasExpectoracion, 3) }}
        {{ cardshow.row('Sibilancias', evaluacionClinica.hasSibilancias, 3) }}
        {{ cardshow.row('Congestión Faringea', evaluacionClinica.hasCongestionFaringea, 3) }}
        {{ cardshow.row('Medida Termómetro', evaluacionClinica.hasMedidaTermometro, 3) }}
        {{ cardshow.row('Otalgia', evaluacionClinica.hasOtalgia, 3) }}
        {{ cardshow.row('Fotofobia', evaluacionClinica.hasFotofobia, 3) }}
        {{ cardshow.row('Congestión Conjuntiva', evaluacionClinica.hasCongestionConjuntiva, 3) }}
        {{ cardshow.row('Vómitos', evaluacionClinica.hasVomitos, 3) }}
        {{ cardshow.row('Dolor Abdominal', evaluacionClinica.hasDolorAbdominal, 3) }}
        {{ cardshow.row('Diarrea', evaluacionClinica.hasDiarrea, 3) }}
        {{ cardshow.row('Adenopatias', evaluacionClinica.hasAdenopatias, 3) }}
        {{ cardshow.row('Astenia', evaluacionClinica.hasAstenia, 3) }}
        {{ cardshow.row('Cefalea', evaluacionClinica.hasCefalea, 3) }}
        {{ cardshow.row('Mialgias', evaluacionClinica.hasMialgias, 3) }}
        {{ cardshow.row('Malestar General', evaluacionClinica.hasMalestarGeneral, 3) }}
        {{ cardshow.row('Erupción Dérmica', evaluacionClinica.hasErupcionDermica, 3) }}
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('3. Enfermedades Asociadas: ') }}
        <div class=" px-3">
            <p>
                <strong>OBSERVACIONES:</strong>
                ENFERMEDADES ASOCIADAS....
            </p>
            <hr><br>
            <hr><br>
        </div>
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('4. Motivo de Consulta: ') }}
        <div class=" px-3">
            <p>
                <strong>OBSERVACIONES:</strong>
                MOTIVO DE LA CONSULTA ES ....
            </p>
            <hr><br>
            <hr><br>
        </div>
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('5. Intervenciones de Enfermería: ') }}
        <div class=" px-3">
            <p>
                <strong>OBSERVACIONES:</strong>
                INTERVENCIONES DE ENFERMERÍA ....
            </p>
            <hr><br>
            <hr><br>
        </div>
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('6. Tratamiento: ') }}
        <div class=" px-3">
            <p>
                <strong>OBSERVACIONES:</strong>
                TRATAMIENTO....
            </p>
            <hr><br>
            <hr><br>
        </div>
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('7. Exámenes Auxiliares: ') }}
        <!--begin::Accordion-->
        <div class="accordion accordion-icon-toggle" id="ficha_examen_auxiliar_accordion">
            {% for fichaExamenAuxiliar in ficha_evaluacion.fichaExamenesAuxiliares %}
                <!--begin::Item-->
                <div class="mb-5">
                    <!--begin::Header-->
                    <div class="row">
                        <div class="col-auto">
                            {{ action.btn_edit_link_ico(path('ficha_examen_auxiliar_edit', {'id': fichaExamenAuxiliar.id})) }}
                            {{ action.btn_print_link_ico(path('ficha_evaluacion_index')) }}
                        </div>
                        <div class="col">
                            <div class="accordion-header py-3 d-flex collapsed" data-bs-toggle="collapse" data-bs-target="#ficha_examen_auxiliar_accordion_item_{{ loop.index }}">
                                <span class="accordion-icon">
                                    <i class="ki-duotone ki-arrow-right fs-4">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </span>
                                <h3 class="fs-6 fw-semibold mb-0 ms-4">
                                    {{ fichaExamenAuxiliar.examenAuxiliar }}
                                </h3>
                            </div>
                        </div>
                    </div><br>
                    <!--end::Header-->

                    <!--begin::Body-->
                    <div id="ficha_examen_auxiliar_accordion_item_{{ loop.index }}" class="fs-6 collapse ps-10" data-bs-parent="#ficha_examen_auxiliar_accordion">
                        {% for detalle in fichaExamenAuxiliar.detalles %}
                            <!--begin::Item-->
                            <div class="mb-4">
                                <!--begin::Item-->
                                <div class="d-flex align-items-center ps-10 mb-n1">
                                    <!--begin::Bullet-->
                                    <span class="bullet me-3"></span>
                                    <!--end::Bullet-->

                                    <!--begin::Label-->
                                    <div class="text-gray-600 fw-semibold fs-6">
                                        {{ detalle.nombre }} : {{ detalle.valor ?? '0.00' }}
                                    </div>
                                    <!--end::Label-->
                                </div>
                                <!--end::Item-->
                            </div>
                            <!--end::Item-->
                        {% endfor %}<br>
                    </div>
                    <!--end::Body-->
                </div>
                <!--end::Item-->
            {% endfor %}
        </div>
        <!--end::Accordion-->
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('8. Recomendaciones Adicionales: ') }}
        <div class=" px-3">
            <p>
                <strong>OBSERVACIONES:</strong>
                RECOMENDACIONES ADICIONALES....
            </p>
            <hr><br>
            <hr><br>
        </div>
        {{ cardshow.card_end() }}

    </div>
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'ficha_evaluacion','entity': ficha_evaluacion} %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'ficha_evaluacion','entity': ficha_evaluacion} %}
{% endblock %}
