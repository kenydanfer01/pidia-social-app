            <p>
                <strong>OBSERVACIONES:</strong>
                {{ examenFisico.observaciones }}
            </p>
            <hr><br>
            <hr><br>
        </div>
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('8. Recomendaciones Adicionales: ') }}
        <div class=" px-3">
            <p>
                <strong>OBSERVACIONES:</strong>
                {{ examenFisico.observaciones }}
            </p>
            <hr><br>
            <hr><br>
        </div>
        {{ cardshow.card_end() }}

    </div>
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'ficha_evaluacion','entity': ficha_evaluacion} %}
{% endblock %}

