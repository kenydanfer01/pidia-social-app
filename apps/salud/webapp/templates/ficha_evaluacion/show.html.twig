{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Ficha Evaluación' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'ficha_evaluacion_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
    {{ table.tbl_tr('Paciente',ficha_evaluacion.paciente) }}
    {{ table.tbl_tr('Diagnóstico',ficha_evaluacion.diagnostico) }}
    {{ table.tbl_tr('Intervenciones',ficha_evaluacion.intervenciones) }}
    {{ table.tbl_tr('Tratamiento',ficha_evaluacion.tratamiento) }}
    {% include 'crud/_show_info.html.twig' with {'entity': ficha_evaluacion} %}
    {{ table.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'ficha_evaluacion','entity': ficha_evaluacion} %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'ficha_evaluacion','entity': ficha_evaluacion} %}
{% endblock %}
