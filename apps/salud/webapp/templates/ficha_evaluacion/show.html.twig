                <p>
                    <strong>OBSERVACIONES:</strong>
                    {{ examenFisico.observaciones }}
                </p>
                <hr><br>
                <hr><br>
            </div>
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('5. Intervenciones de Enfermería: ') }}
