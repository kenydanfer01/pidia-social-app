            {{ cardshow.row('Congestión Faringea', evaluacionClinica.hasCongestionFaringea, 3) }}
            {{ cardshow.row('Medida Termómetro', evaluacionClinica.hasMedidaTermometro, 3) }}
            {{ cardshow.row('Otalgia', evaluacionClinica.hasOtalgia, 3) }}
            {{ cardshow.row('Fotofobia', evaluacionClinica.hasFotofobia, 3) }}
            {{ cardshow.row('Congestión Conjuntiva', evaluacionClinica.hasCongestionConjuntiva, 3) }}
            {{ cardshow.row('Vómitos', evaluacionClinica.hasVomitos, 3) }}
            {{ cardshow.row('Dolor Abdominal', evaluacionClinica.hasDolorAbdominal, 3) }}
            {{ cardshow.row('Diarrea', evaluacionClinica.hasDiarrea, 3) }}
            {{ cardshow.row('Adenopatias', evaluacionClinica.hasAdenopatias, 3) }}
            {{ cardshow.row('Astenia', evaluacionClinica.hasAstenia, 3) }}
            {{ cardshow.row('Cefalea', evaluacionClinica.hasCefalea, 3) }}
            {{ cardshow.row('Mialgias', evaluacionClinica.hasMialgias, 3) }}
            {{ cardshow.row('Malestar General', evaluacionClinica.hasMalestarGeneral, 3) }}
            {{ cardshow.row('Erupción Dérmica', evaluacionClinica.hasErupcionDermica, 3) }}
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('3. Enfermedades Asociadas: ') }}
            <div class=" px-3">
                <p>
                    <strong>OBSERVACIONES:</strong>
                    {{ examenFisico.observaciones }}
                </p>
                <hr><br>
                <hr><br>
            </div>
        {{ cardshow.card_end() }}
        {{ cardshow.card_start('4. Motivo de Consulta: ') }}
