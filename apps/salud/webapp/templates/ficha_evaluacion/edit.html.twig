{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}

{% set _title = 'Ficha Evaluación' %}
{% set _main_title = 'Editar' %}
{% set _section =  'ficha_evaluacion_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Editar') }}
{% endblock %}

{% block _main %}
    {{ include('ficha_evaluacion/_form.html.twig', {'button_label': 'Actualizar'}) }}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_edit_links_ico.html.twig' with {'route_base':'ficha_evaluacion','entity': ficha_evaluacion} %}
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_edit_links.html.twig' with {'route_base':'ficha_evaluacion','entity': ficha_evaluacion} %}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/select2.js') }}"></script>
    <script src="{{ asset('js/collection.js') }}" type="text/javascript"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Select2();
            // Organizar Form ExamenFísico
            let examenFisicoElement = document.getElementById("ficha_evaluacion_examenFisico");
            examenFisicoElement.classList.add("row");
            let divs = examenFisicoElement.querySelectorAll("div");

            for (let i = 1; i < divs.length; i++) {
                divs[i].classList.add("col-sm-6");
            }

            // Organizar Form EvaluaciónClinica
            let evaluacionClinicaElement = document.getElementById("ficha_evaluacion_evaluacionClinica");
            evaluacionClinicaElement.classList.add("row");
            let divsEV = evaluacionClinicaElement.querySelectorAll("div");
            for (let i = 1; i < divsEV.length - 2; i++) {
                divsEV[i].classList.add("col-sm-3");
            }
        })
    </script>
{% endblock %}
