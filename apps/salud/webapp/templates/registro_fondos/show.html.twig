{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Registro de Fondos' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'registro_fondos_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
    {{ table.tbl_tr('Paciente',registro_fondos.paciente) }}
    {{ table.tbl_tr('Tipo',registro_fondos.tipo) }}
    {{ table.tbl_tr('Condicion',registro_fondos.condicion) }}
    {{ table.tbl_tr('Fecha',registro_fondos.fecha | date('d-m-Y')) }}
    {{ table.tbl_tr('Monto',registro_fondos.monto) }}
    {{ table.tbl_tr('Observacion',registro_fondos.observacion) }}

    {% include 'crud/_show_info.html.twig' with {'entity': registro_fondos} %}
    {{ table.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'registro_fondos','entity': registro_fondos} %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'registro_fondos','entity': registro_fondos} %}
{% endblock %}
