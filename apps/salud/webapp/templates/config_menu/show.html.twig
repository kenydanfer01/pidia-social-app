{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Config Menu' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'config_menu_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
    {{ table.tbl_tr('Nombre',config_menu.name) }}
    {{ table.tbl_tr('Ruta',config_menu.route) }}
    {{ table.tbl_tr('Activo',config_menu.isActive | yesno_custom) }}
    {{ table.tbl_end() }}
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'config_menu','entity': config_menu} %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'config_menu','entity': config_menu} %}
{% endblock %}
