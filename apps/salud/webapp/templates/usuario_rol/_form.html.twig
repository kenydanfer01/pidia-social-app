    {% if access.isSuperAdmin -%}
        {{ frm.column2(
            frm.row(form.name),
            frm.row(form.rol)
        ) }}

        {{ frm.column2(
            frm.row(form.config)
        ) }}
    {% else %}
        {{ frm.column2(
