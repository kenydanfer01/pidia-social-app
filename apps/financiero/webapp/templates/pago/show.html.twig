{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Pago' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'pago_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
    {{ table.tbl_tr('Credito',pago.credito) }}
    {{ table.tbl_tr('Pago','S/' ~ pago.pago) }}
    {{ table.tbl_tr('Fecha',pago.fecha|date('Y-m-d'))}}
    {% include 'crud/_show_info.html.twig' with {'entity': pago} %}
    {{ table.tbl_end() }}
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'pago','entity': pago} %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'pago','entity': pago} %}
{% endblock %}
