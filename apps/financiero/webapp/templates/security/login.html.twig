{% extends 'base.html.twig' %}

{% block _body %}
    <!--begin::Body-->
    <body id="kt_body" class="bg-dark">
<!--begin::Main-->
<div class="d-flex flex-column flex-root">
    <!--begin::Authentication - Sign-in -->
    <div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed"
         style="background-image: url({{ asset(_theme ~ 'media/illustrations/dozzy-1/14-dark.png') }})">
        <!--begin::Content-->
        <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
            <!--begin::Logo-->
            <a href="#" class="mb-12">
                <img alt="Logo" src="https://symfony.com/logos/symfony_white_02.png" class="w-200px img-fluid" />
            </a>
            <!--end::Logo-->
            <!--begin::Wrapper-->
            <div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
                <!--begin::Form-->
                <form class="form w-100" novalidate="novalidate" id="kt_sign_in_form"
                      action="{{ path('security_login') }}" method="post">
                    <!--begin::Heading-->
                    <div class="text-center mb-10">
                        <!--begin::Title-->
                        <h1 class="text-dark mb-3">DEMO</h1>
                        <!--end::Title-->
                    </div>
                    <!--begin::Heading-->
                    <!--begin::Input group-->
                    <div class="fv-row mb-10">
                        <!--begin::Label-->
                        <label class="form-label fs-6 fw-bolder text-dark" for="inputUsername">Usuario</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <input id="inputUsername" class="form-control form-control-lg form-control-solid"
                               type="text" name="username" value="{{ last_username }}" autocomplete="off" />
                        <!--end::Input-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="fv-row mb-2">
                        <!--begin::Label-->
                        <label class="form-label fw-bolder text-dark fs-6 mb-0" for="inputPassword">Contraseña</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <input id="inputPassword" class="form-control form-control-lg form-control-solid"
                               type="password" name="password" autocomplete="off" />
                        <!--end::Input-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="fv-row mb-10">
                        <!--begin::Wrapper-->
                        <div class="d-flex flex-stack mb-2">
                            <!--begin::Label-->
                            <div class="form-check form-check-custom form-check-solid form-check-sm">
                                <input class="form-check-input" type="checkbox" name="_remember_me"
                                       id="inputRemember" checked="checked" />
                                <label class="form-check-label" for="inputRemember">
                                    Recordar
                                </label>
                            </div>
                            <!--end::Label-->
                            <!--begin::Link-->
                            <a href="mailto:cio@pidia.pe" class="link-primary fs-6 fw-bolder">Recuperar contraseña?</a>
                            <!--end::Link-->
                        </div>
                        <!--end::Wrapper-->
                    </div>
                    <!--end::Input group-->
                    {% if error %}
                        <div class="fv-row mb-10">
                            <span class="text-danger fs-6 fw-bolder">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                        </div>
                    {% endif %}
                    <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <!--begin::Actions-->
                    <div class="text-center">
                        <!--begin::Submit button-->
                        <button type="submit" id="kt_sign_in_submit" class="btn btn-lg btn-primary w-100 mb-5">
                            <span class="indicator-label">Ingresar</span>
                            <span class="indicator-progress">Please wait...
									<span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                        </button>
                        <!--end::Submit button-->
                    </div>
                    <!--end::Actions-->
                </form>
                <!--end::Form-->
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Content-->
        <!--begin::Footer-->
        <div class="d-flex flex-center flex-column-auto p-10">
            <!--begin::Links-->
            <div class="d-flex align-items-center fw-bold fs-6">
                <a href="http://pidia.pe" target="_blank" class="text-muted text-hover-primary px-2">Acerca de</a>
                <a href="mailto:cio@pidia.pe" class="text-muted text-hover-primary px-2">Contacto</a>
            </div>
            <!--end::Links-->
        </div>
        <!--end::Footer-->
    </div>
    <!--end::Authentication - Sign-in-->
</div>
<!--end::Main-->
<!--begin::Javascript-->
<!--begin::Global Javascript Bundle(used by all pages)-->
<script src="{{ asset(_theme ~ 'plugins/global/plugins.bundle.js') }}"></script>
<script src="{{ asset(_theme ~ 'js/scripts.bundle.js') }}"></script>
<!--end::Global Javascript Bundle-->
{% endblock %}