{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/pagination.html.twig' as pagination %}
{% import 'theme/action.html.twig' as action %}
{% import 'theme/cardshow.html.twig' as cardshow %}
{% import 'theme/form.html.twig' as frm %}

{% set _title = 'Credito' %}
{% set _main_title = 'Listado' %}
{% set _section =  'credito_index' %}

{% block _breadcrumb %}
    {{ breadcrumb.show(_title) }}
{% endblock %}

{% block _main %}
    <div class="">
        {{ form_start(formFilter) }}
        <div class="row">
            <div class="col">
                {{ form_row(formFilter.socio) }}
            </div>
            <div class="col">
                {{ form_row(formFilter.tipoCredito) }}
            </div>
            <div class="col">
                <button class="btn btn-secondary">Buscar</button>
            </div>
        </div>
        {{ form_end(formFilter) }}
    </div>
    <br>
    {{ pagination.pager(paginator, _section, false) }}
    {% embed 'theme/_table.html.twig' %}
        {% block table_head %}
            {% import 'theme/action.html.twig' as action %}
            {% import '@App/theme1/table.html.twig' as table %}

            <tr>
                {{ table.th('#') }}
                {{ table.th('Socio', true, 'd-none d-sm-table-cell') }}
                {{ table.th('T.Credito', true, 'd-none d-sm-table-cell') }}
                {{ table.th('Monto', true, 'd-none d-sm-table-cell') }}
                {{ table.th('Amortizacion', true, 'd-none d-sm-table-cell') }}
                {{ table.th('Activo', true, 'd-none d-sm-table-cell text-center') }}
                <th></th>
            </tr>
        {% endblock %}
        {% block table_body %}
            {% import 'theme/action.html.twig' as action %}
            {% import '@App/theme1/table.html.twig' as table %}

            {% for credito in paginator.results %}
                <tr>
                    <td class="text-center">{{ loop.index | index (paginator)}}</td>
                    <td class="d-block d-sm-none">
                        <table class="table gs-0 gy-0">
                            {{ table.tbl_tr_th_td('Socio', credito.socio) }}
                            {{ table.tbl_tr_th_td('T.Credito', credito.tipoCredito) }}
                            {{ table.tbl_tr_th_td('Monto','S/' ~ credito.monto) }}
                            {{ table.tbl_tr_th_td('Amortizacion','S/' ~ credito.amortizacion) }}
                            {{ table.tbl_tr_th_td('Activo', credito.isActive  | yesno_custom) }}
                        </table>
                    </td>
                    <td class="d-none d-sm-table-cell">{{ credito.socio }}</td>
                    <td class="d-none d-sm-table-cell">{{ credito.tipoCredito }}</td>
                    <td class="d-none d-sm-table-cell">S/ {{ credito.monto }}</td>
                    <td class="d-none d-sm-table-cell">S/ {{ credito.amortizacion }}</td>
                    <td class="d-none d-sm-table-cell text-center">{{ credito.isActive | yesno_custom | raw }}</td>
                    <td class="">
                        <div class="float-end">
                            {% if access.has('show', credito) %}
                                {{ action.btn_show_link2_ico(path('credito_show', {'id': credito.id})) }}
                            {% endif %}
                            {% if access.has('edit', credito) %}
                                {{ action.btn_edit_link2_ico(path('credito_edit', {'id': credito.id})) }}
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No hay registros</td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    {{ pagination.show(paginator, _section) }}
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_index_links.html.twig' with {'route_base': 'credito'} %}
{% endblock%}

{% block _body_tools %}
    {% include 'crud/_index_links_ico.html.twig' with {'route_base': 'credito'}  %}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/crud/list.js') }}"></script>
    <script src="{{ asset('js/select2.js') }}"></script>
    <script>
        $(document).ready(function () {
            Select2()
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            CRUDList.init('{{ path('credito_index') }}');
        })
    </script>
{% endblock %}
