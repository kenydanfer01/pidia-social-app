{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Credito' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'credito_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
    {{ table.tbl_tr('Socio',credito.socio) }}
    {{ table.tbl_tr('T.Credito',credito.tipoCredito) }}
    {{ table.tbl_tr('Monto','S/' ~ credito.monto) }}
    {{ table.tbl_tr('Amortizacion','S/' ~ credito.amortizacion) }}
    {% include 'crud/_show_info.html.twig' with {'entity': credito} %}
    {{ table.tbl_end() }}
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'credito','entity': credito} %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'credito','entity': credito} %}
{% endblock %}
