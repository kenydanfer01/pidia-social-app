{% extends 'base.html.twig' %}
{% import '@TwigShared/theme/breadcrumb.html.twig' as breadcrumb %}
{% import '@TwigShared/theme/pagination.html.twig' as pagination %}

{% set _title = 'User' %}
{% set _main_title = 'List' %}
{% set _section =  'user_index' %}

{% block _breadcrumb %}
    {{ breadcrumb.show(_title) }}
{% endblock %}

{% block _main %}
    {{ pagination.pager(users, _section) }}
    {% embed '@TwigShared/theme/_table.html.twig' %}
        {% block table_head %}
            {% import '@TwigShared/theme/action.html.twig' as action %}
            {% import '@TwigShared/theme/table.html.twig' as table %}

            <tr>
                {{ table.th('#') }}
                {{ table.th('Data', true, 'd-block d-sm-none') }}
                {{ table.th('Name', true, 'd-none d-sm-table-cell') }}
                {{ table.th('FullName', true, 'd-none d-sm-table-cell') }}
                {{ table.th('Activo', true, 'd-none d-sm-table-cell text-center') }}
                <th></th>
            </tr>
        {% endblock %}
        {% block table_body %}
            {% import '@TwigShared/theme/action.html.twig' as action %}
            {% import '@TwigShared/theme/table.html.twig' as table %}

            {% for user in users %}
                <tr>
                    <td class="text-center">{{ loop.index | index(users)}}</td>
                    <td class="d-block d-sm-none">
                        <table class="table gs-0 gy-0">
                            {{ table.tbl_tr_th_td('Name', user.name) }}
                            {{ table.tbl_tr_th_td('FullName', user.fullName) }}
                            {{ table.tbl_tr_th_td('Activo', user.isActive  | yesno_custom) }}
                        </table>
                    </td>
                    <td class="d-none d-sm-table-cell">{{ user.name }}</td>
                    <td class="d-none d-sm-table-cell">{{ user.fullName }}</td>
                    <td class="d-none d-sm-table-cell text-center">{{ user.isActive | yesno_custom | raw }}</td>
                    <td class="">
                        <div class="float-end">
                            {{ action.btn_show_link2_ico(path('user_show', {'id': user.id})) }}
                            {{ action.btn_edit_link2_ico(path('user_edit', {'id': user.id})) }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No hay registros</td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    {{ pagination.show(users, _section) }}
{% endblock %}

{% block _main_footer %}
    {% include '@TwigShared/crud/_index_links.html.twig' with {'route_base': 'user'} %}
{% endblock%}

{% block _body_tools %}
    {% include '@TwigShared/crud/_index_links_ico.html.twig' with {'route_base': 'user'}  %}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/crud/list.js') }}"></script>
    <script>
        $(document).ready(function () {
            CRUDList.init('{{ path('user_index') }}');
        });
    </script>
{% endblock %}
